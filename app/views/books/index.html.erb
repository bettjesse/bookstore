<h1 class="text-2xl font-bold mb-4">Available Books</h1>
<ul class="space-y-4">
  <% @books.each do |book| %>
    <li class="p-4 border rounded shadow-sm">
      <h2 class="text-xl font-semibold">
        <%= link_to book.title, book_path(book), class: "text-blue-500 hover:underline" %>
      </h2>
      <p class="text-gray-700">Author: <%= book.author %></p>
      <p class="text-gray-700">ISBN: <%= book.isbn %></p>
      <p class="mt-2">
        Status: <%= book.available? ? "Available" : "Borrowed" %>
      </p>
      <% if book.available? %>
        <%= button_to "Borrow", borrow_book_path(book), method: :post, data: { turbo: false }, class: "mt-2 bg-green-500 hover:bg-green-700 text-white py-1 px-3 rounded" %>
      <% end %>
    </li>
  <% end %>
</ul>
