<h1 class="text-2xl font-bold mb-4"><%= @book.title %></h1>
<p class="text-gray-700 mb-2"><strong>Author:</strong> <%= @book.author %></p>
<p class="text-gray-700 mb-2"><strong>ISBN:</strong> <%= @book.isbn %></p>
<p class="mb-4">
  <strong>Status:</strong>
  <% if @book.available? %>
    <span class="text-green-600">Available</span>
  <% else %>
    <span class="text-red-600">Borrowed</span>
  <% end %>
</p>
<% if @book.available? %>
  <%= button_to "Borrow this Book", borrow_book_path(@book), method: :post, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
<% else %>
  <p>This book is currently borrowed. Please check back later.</p>
<% end %>
<%= link_to "Back to Book List", books_path, class: "mt-4 inline-block text-blue-500 hover:underline" %>
