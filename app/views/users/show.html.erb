<h1 class="text-2xl font-bold mb-4">Your Borrowed Books</h1>

<p class="mb-4">Email: <%= @user.email_address %></p>

<% if @active_borrowings.any? %>
  <ul class="space-y-4">
    <% @active_borrowings.each do |borrowing| %>
      <li class="p-4 border rounded shadow-sm">
        <h2 class="text-xl font-semibold">
          <%= link_to borrowing.book.title, book_path(borrowing.book), class: "text-blue-500 hover:underline" %>
        </h2>
        <p class="text-gray-700">Author: <%= borrowing.book.author %></p>
        <p class="text-gray-700">ISBN: <%= borrowing.book.isbn %></p>
        <p class="mt-2">Due Date: <%= borrowing.due_date %></p>
        <%= button_to "Return Book", return_borrowing_path(borrowing), method: :patch, data: { turbo: false }, class: "mt-2 bg-red-500 hover:bg-red-700 text-white py-1 px-3 rounded" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You have no active borrowings.</p>
<% end %>
